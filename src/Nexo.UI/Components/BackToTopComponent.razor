@inject IJSRuntime JSRuntime

<button type="button" @onclick="ScrollToTop" id="backToTopButton" class="back-to-top">
    <IconComponent IconName="BootstrapIcon.ArrowUp" Size="icon-e-medium" />
</button>

@code {
    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("scrollToTopSmooth");
    }
}